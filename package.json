{
  "name": "@nexus/auth-service",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "prebuild": "node scripts/fix-imports-simple.js",
    "build": "tsc -p tsconfig.json",
    "postbuild": "node scripts/validate-build.js",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:push": "prisma db push",
    "seed": "tsx prisma/seed.ts",
    "seed:superadmin": "tsx scripts/seed-superadmin.ts",
    "db:migrate": "tsx scripts/migrate.ts",
    "db:check": "tsx scripts/check-connection.ts",
    "promote": "tsx scripts/promote.ts"
  },
  "dependencies": {
    "@fastify/cookie": "^9.4.0",
    "@fastify/cors": "^8.5.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^1.10.2",
    "@prisma/client": "^5.15.0",
    "argon2": "^0.44.0",
    "cheerio": "^1.1.2",
    "dotenv": "^16.4.5",
    "fastify": "^4.29.1",
    "fastify-type-provider-zod": "^1.2.0",
    "ioredis": "^5.8.1",
    "jose": "^5.3.0",
    "mjml": "^4.16.1",
    "nodemailer": "^6.10.1",
    "otplib": "^12.0.1",
    "pg": "^8.16.3",
    "pino": "^9.1.0",
    "qrcode": "^1.5.4",
    "zod": "^3.23.8"
  },
  "overrides": {
    "webidl-conversions": "7.0.0",
    "whatwg-url": "11.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.11",
    "@types/nodemailer": "^7.0.0",
    "@types/pg": "^8.15.5",
    "@types/qrcode": "^1.5.5",
    "@types/supertest": "^6.0.2",
    "@vercel/node": "^3.2.29",
    "prisma": "^5.15.0",
    "supertest": "^6.3.4",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4",
    "vitest": "^1.6.0"
  }
}
