# =============================================================================
# Nexus Auth Service - Environment Configuration Template
# Copy this to .env and fill in your actual values
# =============================================================================

# Application
PORT=4001
NODE_ENV=production

# Database (Neon PostgreSQL)
# Replace with your actual Neon database URL
DATABASE_URL="postgresql://username:password@host:5432/database?sslmode=require&schema=authsvc"

# Redis (Redis Cloud)
# Replace with your actual Redis URL - IMPORTANT: Remove quotes from the URL
REDIS_URL=redis://default:your-password@your-redis-host:port/0

# JWT Configuration
AUTH_JWT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"
AUTH_JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\nYOUR_PUBLIC_KEY_HERE\n-----END PUBLIC KEY-----"
AUTH_JWT_KID="auth-key-1"
AUTH_JWT_ISSUER="nexus-auth"
AUTH_JWT_AUDIENCE="nexus"
AUTH_JWT_ACCESS_EXPIRES_IN="30m"
AUTH_JWT_REFRESH_EXPIRES_IN="31d"

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Monitoring (Optional)
SENTRY_DSN=
LOG_LEVEL=info
